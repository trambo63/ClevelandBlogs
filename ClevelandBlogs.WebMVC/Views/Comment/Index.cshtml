@model IEnumerable<ClevelandBlogs.Models.CommentModels.CommentListItem>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

@foreach (var item in Model)
{
    <section class="post-body">
        <div class="row">
            <div class="col-lg-8">
                @*<img class="img-fluid img-rounded" alt="" src="~/Assets/dj-johnson-jYtgDr-0AyM-unsplash.jpg" style="width: 50rem"/>*@
                <div class="row">
                    <div class="col-sm-10">
                        <h4>Comment</h4>
                        <p>@Html.DisplayFor(model => item.Content)</p>
                        <h4>@Html.DisplayNameFor(model => model.CreatedUtc)</h4>
                        <h5>@Html.DisplayFor(model => item.CreatedUtc)</h5>
                    </div>
                </div>
            </div>
            <aside class="col-md-1">
                <div class="row">
                    <div class"col-sm-4">
                        <a>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CommentId })
                        </a>
                    </div>
                    @*<div class"col-sm-4">
                        <a>
                            @Html.ActionLink("Details", "Details", new { id = item.CommentId })
                        </a>
                    </div>*@
                    <div>
                        <a class="social-link py-4 w-100">
                            @Html.ActionLink("Delete", "Delete", new { id = item.CommentId })
                        </a>
                    </div>
                </div>
            </aside>
        </div>
    </section>
}

