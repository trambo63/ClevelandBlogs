<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/sidebar.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Mitr:wght@600&family=Russo+One&family=Staatliches&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - Cleveland Blogs!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <!--Sidebar-->
        <div id="sidebar-wrapper">
            <ul class="nav navbar nav-stacked">
                <li>@Html.ActionLink("My Posts", "Index", "Post")</li>
                <li>@Html.ActionLink("Comments", "Index", "Comment")</li>
                <li>@Html.ActionLink("Replies", "Index", "Reply")</li>
                <li>@Html.ActionLink("Adds", "IndexAdd", "Guest")</li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" style="background-color: rgba(0, 0, 255, 0.0)">Topics <span class="caret"></span></a>
                
                    <ul class="dropdown-menu" role="menu" style="background-color: rgba(0, 0, 255, 0.5)">
                        <li><a href="@Url.Action("GetAllPostsByCategoryId", "Guest", new { id = 1 })">Sports</a></li>
                        <li><a href="@Url.Action("GetAllPostsByCategoryId", "Guest", new { id = 3 })">Politics</a></li>
                        <li><a href="@Url.Action("GetAllPostsByCategoryId", "Guest", new { id = 4 })">Local News</a></li>
                        <li><a href="#">submenu</a></li>
                    </ul>
                
                </li>
            </ul>
        </div>
        <div class="navbar-default navbar-fixed-top" style="background-color: rgba(0, 0, 255, 0.5)">
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink("CleBlogs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="#" id="menu-toggle" style="font-weight: bold">MENU</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("CategoriesAdmin", "Index", "Category")</li>
                        <li>@Html.ActionLink("AddsAdmin", "Index", "Add")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
   
        <div id="page-content-wrapper">
            <div class="container-fluid body-content">
                @RenderBody()
                <footer>
                    <p>&copy; @DateTime.Now.Year - Cleveland Blogs!</p>
                </footer>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>

    <!--menu toggle script-->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("menuDisplayed");
        });
    </script>
</body>
</html>
